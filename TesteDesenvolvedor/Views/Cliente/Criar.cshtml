@model TesteDesenvolvedor.Models.Cliente;

@{
    ViewData["Title"] = "Cadastrar novo cliente";
}

<h2>Cadastro de Clientes</h2>

<hr />

<div class="row">
    <div class="col-md-4" >
        <form asp-action="Criar" class="needs-validation"> 
            <div class="form-group position-relative">
                <label asp-for="Nome" class="control-label"><strong>Nome</strong></label>
                <input asp-for="Nome" class="form-control" required>
                <div class="valid-tooltip">
                    Nome obrigat√≥rio!
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"><strong>Email</strong></label>
                <input asp-for="Email" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="CPF" class="control-label"><strong>CPF</strong></label>
                <input asp-for="CPF" class="form-control" />
            </div>
            <br>
            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-primary btn-sm" /> |
                <a asp-action="Index" class="btn btn-danger btn-sm">Cancelar</a>
            </div>
        </form>
        </hr>
    </div>
</div>
